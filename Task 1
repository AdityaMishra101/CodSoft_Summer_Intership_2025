def rule_based_chatbot(user_input):
    user_input = user_input.lower()

    if "hello" in user_input or "hi" in user_input:
        return "Hello! How can I help you today?"

    elif "how are you" in user_input:
        return "I'm Doing well, thanks for asking!. How about you?"

    elif "name" in user_input or "who are you" in user_input:
        return "I am a Alpha Bot created for  AI internship task."

    elif "bye" in user_input or "goodbye" in user_input:
        return "Goodbye! Have a great day."

    elif "help" in user_input:
        return "Sure, I can help you. Ask me anything about your internship tasks."

    elif "thank" in user_input:
        return "You're welcome!"

    elif "weather" in user_input:
        return "The Weather is Partly cloudy here with temperature of 29Â° Celcius."

    elif "what are you doing" in user_input:
        return "I'm here to assist you. Ask anything"
    
    else:
        return "I'm not sure how to respond to that. Can you please rephrase?"

# Chatbot loop
def main():
    print("Chatbot: Hello! I'm your Assistant chatbot. Type 'bye' to exit.")
    while True:
        user_input = input("You: ")
        if user_input.lower() in ["bye", "exit", "quit"]:
            print("Chatbot: Goodbye! Best of luck with your internship.")
            break
        response = rule_based_chatbot(user_input)
        print("Chatbot:", response)


if __name__ == "__main__":
    main()
    

    